<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="Team2flix.ui.controller.View2">
	<App>
		<pages>
			<Page title="Nuova serie">
				<Panel expanded="true" headerText="Inserisci informazioni serie" width="auto" class="sapUiResponsiveMargin">
					    <content>
					    	<f:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form1">
							<f:formContainers>
							<f:FormContainer id="__container1">
							<f:formElements>
								<f:FormElement label="Titolo " id="label1">
								<f:fields>
								<Input width="50%" id="input1" required="true"/>
								</f:fields>
								</f:FormElement>
								<f:FormElement label="Genere " id="label2">
								<f:fields>
								<Input width="50%" id="input2"/>
								</f:fields>
								</f:FormElement>
								<f:FormElement label="Anno " id="label3">
								<f:fields>
								<Input width="50%" id="input3"/>
								</f:fields>
								</f:FormElement>
								<f:FormElement label="Regista " id="label7">
								<f:fields>
								<Input width="50%" id="input7"/>
								</f:fields>
								</f:FormElement>
					        </f:formElements>
							</f:FormContainer>
							</f:formContainers>
							<f:layout>
							<f:ResponsiveGridLayout id="__layout1"/>
							</f:layout>
							</f:Form>
					</content>
				</Panel>
				<Panel expandable="true" expanded="true" headerText="Inserisci informazioni serie" width="auto" class="sapUiResponsiveMargin">
					    <content>
					    	<f:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form2">
							<f:formContainers>
							<f:FormContainer id="__container2">
							<f:formElements>
								<f:FormElement label="Episodio " id="label4">
								<f:fields>
								<Input width="50%" id="input4" required="true"/>
								</f:fields>
								</f:FormElement>
								<f:FormElement label="Stagione " id="label5">
								<f:fields>
								<Input width="50%" id="input5" required="true"/>
								</f:fields>
								</f:FormElement>
								<f:FormElement label="Titolo " id="label6">
								<f:fields>
								<Input width="50%" id="input6"/>
								</f:fields>
								</f:FormElement>
					        </f:formElements>
							</f:FormContainer>
							</f:formContainers>
							<f:layout>
							<f:ResponsiveGridLayout id="__layout2"/>
							</f:layout>
							</f:Form>
					</content>
				</Panel>
			<Toolbar height="3rem">
			<Button icon="sap-icon://add" text="Aggiungi" type="Emphasized" press="onAdd"/></Toolbar>
			<Panel expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="Episodi"/>
								<ToolbarSpacer/>
									<Button icon="sap-icon://sys-minus" text="Puntata" type="Reject" press="onDelete"/>
						</Toolbar>
					</headerToolbar>
				<content>
					<Table id="puntate" items="{/data}" mode="MultiSelect" growing="true" growingThreshold="4" growingScrollToLoad="false">
						<items>
							<ColumnListItem id="itemlist">
								<cells>
									<Text text="{Episodio}" id="Episodio"/>
									<Text text="{Stagione}" id="Stagione"/>
									<Text text="{Titolo}" id="Titolo"/>
								</cells>
							</ColumnListItem>
						</items>
					<columns>
						<Column id="episodio">
							<header>
								<Label text="Episodio" id="_Episodio"/>
							</header>
						</Column>
						<Column id="stagione">
							<header>
								<Label text="Stagione" id="_Stagione"/>
							</header>
						</Column>
						<Column id="titolo">
							<header>
								<Label text="Titolo" id="_Titolo"/>
							</header>
						</Column>
					</columns>
				</Table>
			</content>
		</Panel>
			<Button icon="sap-icon://save" text="Salva" press="onSave"/>
			<Button text="Annulla"/>
			<headerContent>
			    <Button xmlns="sap.m" xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" text="Go to series" id="button4" press="action" action:wiring="\{'press':\{'navigation':\{'routeName':'View1'\}\}\}"/>
			</headerContent>
			</Page>
		</pages>
	</App>
</mvc:View>