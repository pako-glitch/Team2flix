<mvc:View xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Team2flix.ui.controller.View1" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages><Page id="page" title="{i18n>title}">
					<content>
						<SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master" orientationChange=".onOrientationChange">
							<detailPages>
								<VBox>
									<f:Form id="detail" editable="false">
										<f:title>
											<core:Title text="{i18n>TitoloSerie}" icon="sap-icon://employee"/>
										</f:title>
										<f:layout>
											<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
										</f:layout>
										<f:formContainers>
											<f:FormContainer>
												<f:formElements>
													<f:FormElement label="{i18n>Genere}">
														<f:fields>
															<Text text="{modello>genere}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="{i18n>Anno}">
														<f:fields>
															<Text text="{modello>anno}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="{i18n>Regista}">
														<f:fields>
															<Text text="{modello>regista}" id="countryText"/>
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>
									<t:Table id="table" rows="{ path: 'puntate>/'}" selectionMode="None" visibleRowCount="6">
										<t:columns>
											<t:Column>
												<Label text="{i18n>titlepuntata}"/>
												<t:template>
													<Text text="{puntate>titolopuntata}" wrapping="false"/>
												</t:template>
											</t:Column>
											<t:Column>
												<Label text="{i18n>st}"/>
												<t:template>
													<Text text="{puntate>stagione}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<Label text="{i18n>ep}"/>
												<t:template>
													<Text text="{puntate>episodio}"/>
												</t:template>
											</t:Column>
										</t:columns>
									</t:Table>
								</VBox>
							</detailPages>
							<masterPages>
								<Page id="master" title="{i18n>titlemaster}" backgroundDesign="List" class="sapUiStdPage" showNavButton="true">
									<SearchField placeholder="Filter..." search="onFilterInvoices" width="15rem" enableSuggestions="true"/>
									<List itemPress="onListPressItem" items="{path:'modello>/'}">
										<items>
											<StandardListItem custom:to="detail" type="Navigation" title="{modello>titoloserie}" icon="sap-icon://employee" id="item1"/>
										</items>
									</List>
								</Page>
							</masterPages>
						</SplitApp>
						<Button xmlns="sap.m" text="+" id="button0" custom:wiring="\{'press':\{'navigation':\{'routeName':'View2'\}\}\}" press="action"/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>