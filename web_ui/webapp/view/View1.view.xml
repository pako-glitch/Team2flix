<mvc:View xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="web_ui.web_ui.controller.View1" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Button xmlns="sap.m" text="Button" id="button0" press="action" custom:wiring="\{'press':\{'navigation':\{'routeName':'View2'\}\}\}"/>
						<SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master" orientationChange=".onOrientationChange">
							<detailPages>
								<VBox>
									<f:Form id="detail" editable="false">
										<f:title>
											<core:Title text="{i18n>TitoloSerie}" icon="sap-icon://employee"/>
										</f:title>
										<f:layout>
											<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
										</f:layout>
										<f:formContainers>
											<f:FormContainer>
												<f:formElements>
													<f:FormElement label="{i18n>Genere}">
														<f:fields>
															<Text text="{Street} {HouseNumber}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="{i18n>Anno}">
														<f:fields>
															<Text text="{ZIPCode} {City}"/>
														</f:fields>
													</f:FormElement>
													<f:FormElement label="{i18n>Regista}">
														<f:fields>
															<Text text="{Country}" id="countryText"/>
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>
									<t:Table id="table" rows="{ path: 'Modello>/Puntata'}" selectionMode="MultiToggle" visibleRowCount="6">
										<t:extension>
											<!--<OverflowToolbar>-->
											<!--	<Title id="title" text="{i18n>titleslave}"/>-->
											<!--	<ToolbarSpacer/>-->
											<!--	<Label text="SelectionMode:"/>-->
											<!--la modalità di selezione che fa scegliere tra MultiToggle Single e None-->
											<!--	<Select id="select" selectedKey="MultiToggle" change="onSelectionModeChange">-->
											<!--		<items>-->
											<!--			<core:Item key="MultiToggle" text="MultiToggle"/>-->
											<!--			<core:Item key="Single" text="Single"/>-->
											<!--			<core:Item key="None" text="None"/>-->
											<!--		</items>-->
											<!--	</Select>-->
											<!--Toggle Alternate è la zebra-->
											<!--	<ToggleButton text="Toggle Alternate Row Colors: Zebra" press="onAlternateToggle"/>-->
											<!--</OverflowToolbar>-->
											<ToolbarSeparator/>
										</t:extension>
										<t:columns>
											<t:Column>
												<Label text="{i18n>titlepuntata}"/>
												<t:template>
													<Text text="{Modello>titoloPuntata}" wrapping="false"/>
												</t:template>
											</t:Column>
											<t:Column>
												<Label text="{i18n>st}"/>
												<t:template>
													<Text text="{Modello>stagione}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<Label text="{i18n>ep}"/>
												<t:template>
													<Text text="{Modello>episodio}"/>
												</t:template>
											</t:Column>
										</t:columns>
									</t:Table>
								</VBox>
							</detailPages>
							<masterPages>
								<Page id="master" title="{i18n>titlemaster}" backgroundDesign="List" class="sapUiStdPage" showNavButton="true">
									<SearchField placeholder="Filter..." search="filterGlobally" width="15rem" enableSuggestions="true"/>
									<List itemPress=".onListItemPress" items="{path:'Modello>/series'}">
										<items>
											<StandardListItem custom:to="detail" type="Navigation" title="{Modello>titoloSerie}" icon="sap-icon://employee" id="item1"/>
										</items>
									</List>
								</Page>
							</masterPages>
						</SplitApp>
						<Button xmlns="sap.m" text="+" id="button1" custom:wiring="\{'press':\{'navigation':\{'routeName':'ViewInsert'\}\}\}" press="action"/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>